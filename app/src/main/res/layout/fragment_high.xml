<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/title"
        android:layout_marginTop="120dp"
        android:text="高拍仪扫描"
        android:textColor="#333"
        android:textSize="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_marginLeft="20dp"
        android:id="@+id/tv_second"
        android:text="15"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">
        <com.serenegiant.usb.widget.UVCCameraTextureView
            android:id="@+id/uvc_view"
            android:layout_width="750px"
            android:layout_height="580px"
            android:layout_marginTop="100px"
            android:layout_marginLeft="50px"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:layout_marginTop="15px"
            android:id="@+id/llayout_brightness"
            android:layout_width="750px"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/uvc_view"
            app:layout_constraintStart_toStartOf="@id/uvc_view"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:text="亮度"
                android:textColor="#000000" />

            <SeekBar
                android:id="@+id/sBar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15px"
            android:id="@+id/llayout_contrast"
            android:layout_width="750px"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/llayout_brightness"
            app:layout_constraintStart_toStartOf="@id/llayout_brightness"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:text="对比度"
                android:textColor="#000000" />

            <SeekBar
                android:id="@+id/sBar_contrast"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10" />
        </LinearLayout>



        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="310px"
            android:layout_height="wrap_content"
            android:layout_marginStart="15px"
            android:layout_marginEnd="10px"
            android:text="请将纸质文件放置高拍仪指定位置进行拍摄扫描"
            android:textColor="#333"
            android:textSize="28px"
            app:layout_constraintLeft_toRightOf="@id/uvc_view"
            app:layout_constraintTop_toTopOf="@id/uvc_view" />
        <Button
            android:id="@+id/btn_screen"
            android:layout_width="200px"
            android:layout_height="90px"
            android:gravity="center"
            android:text="拍摄"
            android:layout_marginTop="80px"
            android:textSize="32px"
            app:layout_constraintLeft_toRightOf="@id/uvc_view"
            app:layout_constraintRight_toRightOf="@id/tv_hint"
            app:layout_constraintTop_toBottomOf="@id/tv_hint" />
        <Button
            android:id="@+id/btn_try_again"
            android:layout_width="200px"
            android:layout_height="90px"
            android:layout_marginTop="100px"
            android:gravity="center"
            android:text="完成"
            android:textSize="32px"
            app:layout_constraintLeft_toRightOf="@id/uvc_view"
            app:layout_constraintRight_toRightOf="@id/tv_hint"
            app:layout_constraintTop_toBottomOf="@id/btn_screen" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@id/uvc_view"
            app:layout_constraintStart_toEndOf="@id/tv_hint"
            app:layout_constraintEnd_toEndOf="parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预览"
                android:textColor="#333"
                android:textSize="40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(说明：单击：预览，长按：删除)"
                android:textColor="#999999"
                android:textSize="24px" />

        </androidx.appcompat.widget.LinearLayoutCompat>
        <View
            android:layout_width="350dp"
            android:layout_height="1px"
            android:layout_marginTop="10px"
            android:background="#D7D7D7"
            app:layout_constraintTop_toBottomOf="@+id/ll_hint"
            app:layout_constraintStart_toStartOf="@id/ll_hint"/>

        <ListView
            android:id="@+id/rv_content"
            android:layout_width="500px"
            android:layout_marginTop="50px"
            android:layout_height="500px"
            app:layout_constraintBottom_toBottomOf="@id/uvc_view"
            app:layout_constraintTop_toBottomOf="@+id/ll_hint"
            app:layout_constraintStart_toStartOf="@id/ll_hint"
            app:layout_constraintEnd_toEndOf="@id/ll_hint"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>