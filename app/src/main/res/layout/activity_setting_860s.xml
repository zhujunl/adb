<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16sp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:gravity="center_vertical|start"
        android:paddingStart="30sp"
        android:text="设置"
        android:textSize="28sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/SettingItem_860s">

                <TextView style="@style/SettingName_860s"
                    android:text="版本号"
                    android:layout_weight="3"/>

                <View style="@style/VerticalLine" />

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/white"
                    android:gravity="center"
                    android:textColor="@color/dark"
                    android:layout_margin="1sp"
                    android:textSize="15sp" />

                <View style="@style/VerticalLine" />

                <Button
                    android:id="@+id/btn_update"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_btn_bg"
                    android:gravity="center"
                    android:layout_margin="1sp"
                    android:text="检查更新"
                    android:textColor="@color/orange"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout style="@style/SettingItem_860s">

                <TextView style="@style/SettingName_860s"
                    android:text="IP" />

                <View style="@style/VerticalLine" />

                <EditText
                    android:id="@+id/et_ip"
                    style="@style/SettingEditItem_860s" />

            </LinearLayout>

            <LinearLayout style="@style/SettingItem_860s">

                <TextView style="@style/SettingName_860s"
                    android:text="端口号" />

                <View style="@style/VerticalLine" />

                <EditText
                    android:id="@+id/et_port"
                    style="@style/SettingEditItem_860s" />

            </LinearLayout>
            
            <LinearLayout style="@style/SettingItem_860s">

                <TextView style="@style/SettingName_860s"
                    android:text="机构名称" />

                <View style="@style/VerticalLine" />

                <EditText
                    android:id="@+id/et_org"
                    style="@style/SettingEditItem_860s" />

            </LinearLayout>

            <LinearLayout style="@style/SettingItem_860s">

                <TextView style="@style/SettingName_860s"
                    android:text="比对阈值" />

                <View style="@style/VerticalLine" />

                <EditText
                    android:id="@+id/et_pass_score"
                    android:tag="false"
                    android:inputType="numberDecimal"
                    style="@style/SettingEditItem_860s"/>

            </LinearLayout>

            <LinearLayout style="@style/SettingItem_860s">

                <TextView style="@style/SettingName_860s"
                    android:text="验证模式" />

                <View style="@style/VerticalLine" />

                <Spinner
                    android:id="@+id/s_verify_mode"
                    android:layout_width="0sp"
                    android:layout_height="30sp"
                    android:dropDownVerticalOffset="30sp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout style="@style/SettingItem_860s">

                <TextView style="@style/SettingName_860s"
                    android:text="网络开关" />

                <View style="@style/VerticalLine" />

                <RadioGroup
                    android:id="@+id/rg_net"
                    style="@style/SettingRadioGroup_860s">

                    <View style="@style/SpaceBody" />

                    <RadioButton
                        android:id="@+id/rb_net_on"
                        style="@style/SettingRadioItem_860s"
                        android:text="联网" />

                    <View style="@style/SpaceBody" />

                    <RadioButton
                        android:id="@+id/rb_net_off"
                        style="@style/SettingRadioItem_860s"
                        android:text="单机" />

                    <View style="@style/SpaceBody" />

                </RadioGroup>



            </LinearLayout>
            <LinearLayout style="@style/SettingItem_860s">

                <TextView style="@style/SettingName_860s"
                    android:text="查询记录" />

                <View style="@style/VerticalLine" />

                <RadioGroup
                    android:id="@+id/rg_query"
                    style="@style/SettingRadioGroup_860s">

                    <View style="@style/SpaceBody" />

                    <RadioButton
                        android:id="@+id/rb_query_on"
                        style="@style/SettingRadioItem_860s"
                        android:text="允许" />

                    <View style="@style/SpaceBody" />

                    <RadioButton
                        android:id="@+id/rb_query_off"
                        style="@style/SettingRadioItem_860s"
                        android:text="不允许" />

                    <View style="@style/SpaceBody" />

                </RadioGroup>

            </LinearLayout>
            <LinearLayout style="@style/SettingItem_860s">

                <TextView style="@style/SettingName_860s"
                    android:text="续传时间"
                    android:layout_weight="3"/>

                <View style="@style/VerticalLine" />

                <TextView
                    android:id="@+id/tv_select_time"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:clickable="true"
                    android:gravity="center"
                    android:hint="点击选择时间"
                    android:textSize="15sp" />

                <View style="@style/VerticalLine" />

                <Button
                    android:id="@+id/btn_clear_now"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_btn_bg"
                    android:gravity="center"
                    android:text="立即执行"
                    android:textColor="@color/orange"
                    android:textSize="15sp" />

                <View style="@style/VerticalLine" />

            </LinearLayout>

            <LinearLayout style="@style/SettingItem_860s">

                <TextView style="@style/SettingName_860s"
                    android:text="比对数目 （未上传数目 / 总数）" />

                <View style="@style/VerticalLine" />

                <TextView
                    android:id="@+id/tv_result_count"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:hint="正在计算..."
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout style="@style/SettingItem_860s">

                <TextView style="@style/SettingName_860s"
                    android:text="监控间隔" />

                <View style="@style/VerticalLine" />

                <EditText
                    android:id="@+id/et_monitor_interval"
                    style="@style/SettingEditItem_860s"
                    android:inputType="numberDecimal" />

            </LinearLayout>


            <LinearLayout style="@style/SettingItem_860s">

                <TextView style="@style/SettingName_860s"
                    android:text="提示文字" />

                <View style="@style/VerticalLine" />

                <EditText
                    android:id="@+id/et_banner"
                    style="@style/SettingEditItem_860s" />

            </LinearLayout>


            <LinearLayout style="@style/SettingItem_860s">

                <TextView
                    style="@style/SettingName_860s"
                    android:text="密码" />

                <View style="@style/VerticalLine" />

                <EditText
                    android:id="@+id/et_pwd"
                    style="@style/SettingEditItem_860s"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:maxLength="6" />

            </LinearLayout>

            <LinearLayout style="@style/SettingItem_860s">

                <TextView style="@style/SettingName_860s"
                    android:text="广告开关" />

                <View style="@style/VerticalLine" />

                <RadioGroup
                    android:id="@+id/rg_advertise"
                    style="@style/SettingRadioGroup_860s">

                    <View style="@style/SpaceBody" />

                    <RadioButton
                        android:id="@+id/rb_advertise_on"
                        style="@style/SettingRadioItem_860s"
                        android:text="开启" />

                    <View style="@style/SpaceBody" />

                    <RadioButton
                        android:id="@+id/rb_advertise_off"
                        style="@style/SettingRadioItem_860s"
                        android:text="关闭" />

                    <View style="@style/SpaceBody" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout style="@style/SettingItem_860s">

                <TextView style="@style/SettingName_860s"
                    android:text="广告显示延迟（秒）" />

                <View style="@style/VerticalLine" />

                <EditText
                    android:id="@+id/et_advertise_delay_time"
                    style="@style/SettingEditItem_860s"
                    android:digits="0123456789"
                    android:inputType="number" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="5sp"
        android:layout_marginRight="40sp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_white_manage"
            style="@style/setting_button_860s"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_marginEnd="5sp"
            android:layout_weight="1"
            android:text="白名单配置" />

        <Button
            android:id="@+id/btn_black_manage"
            style="@style/setting_button_860s"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_marginEnd="5sp"
            android:layout_weight="1"
            android:text="黑名单配置"
            android:visibility="invisible" />

        <Button
            android:visibility="invisible"
            android:id="@+id/btn_local_feature_manage"
            style="@style/setting_button_860s"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:text="本地特征库"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="40sp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_save_config"
            style="@style/stroke_button_860s"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_marginEnd="5sp"
            android:layout_weight="1"
            android:text="保存设置" />

        <Button
            android:id="@+id/btn_cancel_config"
            style="@style/stroke_button_860s"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_marginEnd="5sp"
            android:layout_weight="1"
            android:text="返回" />

        <Button
            android:id="@+id/btn_exit"
            style="@style/stroke_button_860s"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:text="退出程序"
            android:textColor="@color/red" />

    </LinearLayout>

</LinearLayout>