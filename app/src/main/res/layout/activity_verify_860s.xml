<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.miaxis.face.view.activity.MainActivity">

    <TextView
        android:layout_margin="15dp"
        android:id="@+id/tv_second"
        android:visibility="gone"
        android:text="15"
        android:textColor="@color/gray_dark"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_top"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <SurfaceView
            android:id="@+id/sv_main"
            android:layout_width="1280px"
            android:layout_height="960px" />

        <SurfaceView
            android:id="@+id/sv_rect"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <include layout="@layout/title_860s" />

    <TextView
        android:id="@+id/tv_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200sp"
        android:background="@drawable/qing_stroke_bg"
        android:paddingLeft="23sp"
        android:paddingTop="5sp"
        android:paddingRight="23sp"
        android:paddingBottom="5sp"
        android:text="请放身份证"
        android:textColor="@color/qing"
        android:textSize="70sp"
        android:visibility="visible" />

    <com.miaxis.face.view.custom.ResultLayout
        android:id="@+id/rv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
